<h1>Check all the available coffee!</h1>

<ul>
  <% @coffees.each do |c| %>
    <li>
      <%= link_to c.name, coffee_path(c) %> - <%= c.description %>
      <% if policy(c).edit? %>
        <%= link_to "Update", edit_coffee_path(c) %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if policy(Coffee).create? %>
  <%= link_to "Sell a coffee", new_coffee_path(), class: "btn btn-primary" %>
<% end %>
